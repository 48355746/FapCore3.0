    <div class="col-xs-12 col-sm-3">
        <div class="widget-box">
            <div class="widget-header widget-header-flat">
                <h4 class="widget-title"><fap-multilang lang-key="orgdept_orgjob_jobgroup_title" default-content="职位族"></fap-multilang></h4>
                <fap-tree-button id="jobgroup" description="职位族" tree-id="tree-jobgroup"></fap-tree-button>
