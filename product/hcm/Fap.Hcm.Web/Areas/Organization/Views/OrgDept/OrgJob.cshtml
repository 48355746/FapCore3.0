    var afterInitFormCallback = function () {
        var tree = $('#tree-jobgroup').jstree(true);
        var sel = tree.get_selected();
        var node = tree.get_node(sel[0]);
        if (node.data.group === "1") {
            $("#frm-grid-job #JobGroup").val(sel[0]).next().val(node.text);
        } else {
            $.msg("请选择职位族");
        }
    }
    var scripts = [null, null]
    $('.page-content-area').ace_ajax('loadScripts', scripts, function () {
        jQuery(function ($) {
            $(document).one('ajaxloadstart.page', function (e) {
                $('#tree-orgjob').jstree("destroy");
            })          

            $('#tree-orgjob').on("changed.jstree", function (e, data) {
                if (data && data.selected && data.selected.length) {
                    var jobGrpid = data.selected[0];
                    //根节点
                    if (jobGrpid == "0") {
                        $("#grid-job").jqGrid('setGridParam', {
                            datatype: 'json',
                            postData: { filters: {} }, //发送数据
                            page: 1
                        }).trigger("reloadGrid"); //重新载入
                        return;
                    }
                    var jobGrpName = data.node.text;

                    var filter = '{"groupOp":"AND","rules":[{"field":"JobGroup","op":"eq","data":"' + jobGrpid + '"}]}';
                    $("#grid-job").jqGrid('setGridParam', {
                        datatype: 'json',
                        postData: { filters: filter }, //发送数据
                        page: 1
                    }).trigger("reloadGrid"); //重新载入
                }
                //console.log(data.selected);
            });
        })
    })
