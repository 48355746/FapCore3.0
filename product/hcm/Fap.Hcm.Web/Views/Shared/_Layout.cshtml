@{
    var currLanguage = _multiLangService.CurrentLanguage; //当前语种
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <!-- page specific plugin styles -->
    @{await Html.RenderPartialAsync("_ControlCssPartial"); }
    @RenderSection("beforecss", required: false)
    <style>
        .error .help-block {
            color: #d16e6c;
            font-size: 14px;
        }
    </style>
    <!--[if lte IE 9]>
        <link rel="stylesheet" href="/Content/css/ace-part2.css" class="ace-main-stylesheet" />
    <![endif]-->
    <!--[if lte IE 9]>
      <link rel="stylesheet" href="/Content/css/ace-ie.css" />
    <![endif]-->
    <!-- page specific plugin styles -->
    <!--实时IM的样式-->
    @*<link href="/Content/chat/Css/ChatCore.css" rel="stylesheet" />*@
    <!-- inline styles related to this page -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='/Content/js/jquery.js'>" + "<" + "/script>");
    </script>
    <script src="~/Content/nprogress/nprogress.js"></script>
    <!-- <![endif]-->
    <!--[if IE]>
    <script type="text/javascript">
     window.jQuery || document.write("<script src='/Content/js/jquery1x.js'>"+"<"+"/script>");
    </script>
    <![endif]-->
    <!-- ace settings handler -->
    <script src="/Content/js/ace-extra.js"></script>
    <!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->
    <!--[if lte IE 8]>
    <script src="/Content/js/html5shiv.js"></script>
    <script src="/Content/js/respond.js"></script>
    <![endif]-->
    <!--[if lte IE 8]>
          <script src="/Content/js/excanvas.js"></script>
      <![endif]-->
    <!--多语资源-->
    <script src="/Scripts/MultiLanguage.js" asp-append-version="true"></script>
    <script>
        //全局根路径
        var basePath = window.location.protocol+ "//" + window.location.host;
        var language = '@currLanguage'; //当前语种
        MultiLangHelper.initLang(language);
        if (language === "ZhTW") {
            language = "zh-TW"
        } else if (language === "En") {
            language = "en";
        } else if (language === "Ja") {
            language = "ja";
        } else {
            language = "zh-CN";
        }
    </script>
</head>
<body class="no-skin">
    <div class="main-content">
        <div class="main-content-inner">
            <div class="page-content">
                @*<div class="row">
                    <div class="col-xs-12">*@
                @RenderBody()
                @*</div>
                    </div>*@
            </div>
        </div>
    </div>
    <!-- ace scripts -->
    @{await Html.RenderPartialAsync("_ControlJsPartial"); }
    @RenderSection("afterscript", required: false)

</body>
</html>
